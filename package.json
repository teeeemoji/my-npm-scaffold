{
  "name": "my-npm-scaffold",
  "version": "1.0.0",
  "description": "my npm module scaffold 我的 npm 包的脚手架",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/* mochawesome-report/*",
    "prebuild": "npm run clean",
    "build": "./node_modules/.bin/webpack",
    "pretest": "npm run build",
    "test": "./node_modules/.bin/mocha",
    "posttest": "open ./mochawesome-report/mochawesome.html",
    "style": "./node_modules/.bin/eslint --fix src test",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node script/verify-commit-msg.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teeeemoji/my-npm-scaffold.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/teeeemoji/my-npm-scaffold/issues"
  },
  "homepage": "https://github.com/teeeemoji/my-npm-scaffold#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.15.0",
    "eslint-config-fbjs": "^2.0.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-relay": "0.0.20",
    "lint-staged": "^6.0.1",
    "lodash": "^4.17.4",
    "mocha": "^5.0.0",
    "mochawesome": "^3.0.1",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0",
    "webpack": "^3.10.0",
    "yorkie": "^1.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "gitHooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node script/verify-commit-msg.js"
    }
  }
}
